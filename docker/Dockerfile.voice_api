# Use Python slim base
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libpq-dev gcc && \
    rm -rf /var/lib/apt/lists/*

# Copy only requirements first (for build caching)
COPY requirements/ ./requirements/
# Install base dependencies (includes FastAPI, Twilio, etc.)
RUN pip install --no-cache-dir -r requirements/base.txt

# Copy project source code
COPY src ./src

ENV PYTHONPATH=/app

# Expose FastAPI port
EXPOSE 8000

# Default command to run FastAPI server
CMD ["uvicorn", "src.voice_screening_ui.server:app", "--host", "0.0.0.0", "--port", "8000"]

